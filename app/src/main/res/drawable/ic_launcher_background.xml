<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base diagonal gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#E3F2FD"
                android:centerColor="#F3E5F5"
                android:endColor="#FFF3E0"
                android:type="linear" />
        </shape>
    </item>

    <!-- Accent glow (pink/purple) top-left -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:centerX="0.20"
                android:centerY="0.15"
                android:gradientRadius="280dp"
                android:startColor="#66FF6BCB"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>

    <!-- Accent glow (cyan/blue) bottom-right -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:centerX="0.85"
                android:centerY="0.80"
                android:gradientRadius="340dp"
                android:startColor="#6630D5FF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>

    <!-- Subtle vignette for depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:centerX="0.50"
                android:centerY="0.55"
                android:gradientRadius="720dp"
                android:startColor="#00000000"
                android:endColor="#22000000" />
        </shape>
    </item>

</layer-list>
