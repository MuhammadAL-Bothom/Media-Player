<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base diagonal gradient (dark) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#0B1020"
            android:centerColor="#151E32"
            android:endColor="#1F2A44"
            android:type="linear" />
        </shape>
    </item>

    <!-- Accent glow (violet) top-left -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:centerX="0.22"
                android:centerY="0.18"
                android:gradientRadius="300dp"
                android:startColor="#662E64FF"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Accent glow (teal) bottom-right -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:centerX="0.85"
                android:centerY="0.82"
                android:gradientRadius="360dp"
                android:startColor="#6640E0C8"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Subtle vignette -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:centerX="0.50"
                android:centerY="0.55"
                android:gradientRadius="760dp"
                android:startColor="#00000000"
                android:endColor="#33000000" />
        </shape>
    </item>

</layer-list>
